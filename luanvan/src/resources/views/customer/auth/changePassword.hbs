<div class="container d-flex justify-content-lg-center" style="padding-top: 120px;">
    <div class=" bd-highlight ">
        <h4 class="text-center mb-2">Đổi mật khẩu</h4>
        {{#if success}}
                <h4 class="alert alert-success">Đổi mật khẩu thành công</h4>
        {{/if}}

        <form action="/tai-khoan/me/doi-mat-khau" class="mr-2" method="POST">
            <div class="form-group">
                <label for="oldpw">Mật khẩu cũ</label>
                <input type="password" class="form-control" id="oldpw" name="matkhaucu" value="" required>
            </div>
            <div class="form-group">
                <label for="newpw">Mật khẩu mới</label>
                <input type="password" class="form-control" id="newpw" name="matkhaumoi" value="" required>
            </div>
            <div class="form-group">
                <label for="againpw">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" id="againpw" name="matkhaunhaplai" value="" required>
            </div>

            {{#if error}}
                <h4 class="alert alert-danger">{{error}}</h4>
            {{/if}}
            <div class="text-center">
                <button type="submit" class="btn btn-primary items-center" style="width: 300px">Thay đổi</button>
            </div>
        </form>
    </div>
</div>

