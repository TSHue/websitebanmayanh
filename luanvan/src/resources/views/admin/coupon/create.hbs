<div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Mã giảm giá</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
              <li class="breadcrumb-item"><a href="/admin/coupon">Mã giảm giá</a></li>
              <li class="breadcrumb-item active">Thêm mã giảm giá</li>
            </ol>
          </div>
        </div>
      </div>
</div>


<div class="content">
  <div class="container-fluid">
    {{#if error}} 
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" aria-label="Close">×</button>
        <h5><strong>Cảnh báo!</strong></h5>
        {{errdate}}
        {{errid}}
      </div>
    {{/if}}
    <div class="card">
      <div class="card-header d-flex align-items-center">
        Thêm mã giảm giá
        <a href="/admin/coupon" class="btn btn-outline-primary ml-auto">Quay về</a>
      </div>
      <div class="card-body">
        <form method="POST" action="/admin/coupon/store">
          <div class="form-group">
            <label for="magg">Mã giảm giá</label>
            <input type="text" class="form-control" name="magg" placeholder="Nhập mã giảm giá" maxlength="10" required {{#if error}} value="{{error.magg}}" {{/if}}>
          </div>
          <div class="form-group">
            <label for="tenmagg">Tên mã giảm giá</label>
            <input type="text" class="form-control" name="tenmagg" placeholder="Nhập tên mã giảm giá" required {{#if error}} value="{{error.tenmagg}}" {{/if}}>
          </div>
          <div class="form-group">
            <label for="ngayapdung">Ngày áp dụng</label>
            <input type="date" class="form-control" name="ngayapdung" required {{#if error}} value="{{error.ngayapdung}}" {{/if}}>
          </div>
          <div class="form-group">
            <label for="ngayketthuc">Ngày kết thúc</label>
            <input type="date" class="form-control" name="ngayketthuc" required {{#if error}} value="{{error.ngayketthuc}}" {{/if}}>
          </div>
          <div class="form-group">
            <label for="hinhthucgiam">Hình thức giảm</label>
            <select class="form-control" name="hinhthucgiam" id="hinhthucgiam">
              <option value="0">%</option>
              <option value="1" {{sosanhHT error.hinhthucgiam}} >VNĐ</option>
            </select>
          </div>
          <div class="form-group">
            <label for="mucdo">Mức độ</label>
            <input type="number" class="form-control" name="mucdo" id="mucdo" placeholder="Nhập mức độ" required {{#if error}} value="{{error.mucdo}}" {{/if}}>
          </div>
          <button type="submit" class="btn btn-primary">Thêm mã giảm giá</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $( document ).ready(function() {
    $("#hinhthucgiam").change(function(event) {
      // Prevent the form from submitting via the browser.
      event.preventDefault();
      if(this.value == "1"){
        $("#mucdo").attr('min', 1000);
        $("#mucdo").attr('max', 500000);
      }
      else{
        $("#mucdo").attr('min', 1);
        $("#mucdo").attr('max', 100);
      }
    }).change();
  })
</script>