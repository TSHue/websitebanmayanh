<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Nhà cung cấp</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/provider">Nhà cung cấp</a></li>
                    <li class="breadcrumb-item active">Sửa nhà cung cấp</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header d-flex align-items-center">
              Sửa loại sản phẩm
              <a href="/admin/provider" class="btn btn-outline-primary ml-auto">Quay về</a>
            </div>
            <div class="card-body">
                    <form method="POST" action="/admin/provider/{{provider.mancc}}?_method=PUT">
                        <div class="form-group">
                            <label for="mancc">Mã nhà cung cấp</label>
                            <input type="text" class="form-control" value="{{provider.mancc}}" name="mancc" readonly="true">
                        </div>
                        <div class="form-group">
                            <label for="tenncc">Tên nhà cung cấp</label>
                            <input type="text" class="form-control" value="{{provider.tenncc}}" name="tenncc" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" type="email" name="email" value="{{provider.email}}" required>
                        </div>
                        <div class="form-group">
                            <label for="sodt">Số điện thoại</label>
                            <input class="form-control" type="number" min="0" name="sodt" value="{{provider.sodt}}" required >
                        </div>
                        <div class="form-group">
                            <label for="diachi">Địa chỉ</label>
                            <input type="text" class="form-control" value="{{provider.diachi}}" name="diachi" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu lại</button>
                    </form>
            </div>
        </div>
    </div>
</div>